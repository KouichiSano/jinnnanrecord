<table>
  <% if @order_items.presence %>
  <tr class="columntitle">
    <th>　　　　</th>
    <th>アルバム名</th>
    <th>アーティスト名</th>
    <th>価格</th>
    <th>数量</th>
  </tr>
    <% @order_items.each do |order_item| %>
    <tr>
      <td><% if order_item.item.image.present? %>
        <%= attachment_image_tag order_item.item, :image, :fill, 200, 200,class: "cart_image" %>
        <% else %>
        <%= image_tag 'no_image.jpg', size: '200x200',alt: "no image" ,class: "cart_image"%>
        <% end %></td>
        <td><%= link_to order_item.item.item_name, item_path(order_item.item) %></td>
        <td><%= order_item.item.item_name %></td>
        <td><%= order_item.item.price %>円</td>
        <td><%= order_item.quantity %></td>
        </tr>
        <% end %>
      </table>
      <div class="shokei">
      </div>
      <% else %>
      <p>商品はありません</p>
      <% end %>
    </table>
