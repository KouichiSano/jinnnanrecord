
<div class="login_form_box">
  <h2>ユーザー情報変更</h2>
  <p>※は必須項目です。</p>
  <br>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= form_for(@user) do |f| %>

          <div class="field">
            ※メールアドレス：<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            ※苗字：<%= f.text_field :last_name %>
          </div>

          <div class="field">
            ※苗字フリガナ：<%= f.text_field :last_name_kana %>
          </div>

          <div class="field">
            ※名前：<%= f.text_field :first_name %>
          </div>


          <div class="field">
            ※名前フリガナ：<%= f.text_field :first_name_kana %>
          </div>

          <div class="field">
            ※郵便番号：<%= f.text_field :postal_code %>
          </div>

          <div class="field">
            ※住所：<%= f.text_field :address %>
          </div>

          <div class="field">
            ※電話番号：<%= f.text_field :tel_num %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
            <em><!-- (<%#= @minimum_password_length %> characters minimum) --></em>
            <% end %><br />
            ※パスワード：<%= f.password_field :password, autocomplete: "off" %>
          </div><br>

          <div class="field">
            ※パスワード(確認)：<%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "編集完了" %>
          </div>
        <% end %>
        </div>
      <div class="col-md-3"></div>
  </div>
</div>
