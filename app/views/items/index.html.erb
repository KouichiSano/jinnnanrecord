<div class="index-container clearfix">
  <section class="items clearfix">
    <h2 class="item-headline">新作</h2>
    <% @items.each do |item| %>
    <div class="item-box">
      <div class="item-item clearfix">
        <% if item.image.present? %>
        <%= link_to (attachment_image_tag item, :image, :fill,130, 130,alt: "disc image"),item_path(item) %>
        <% else %>
        <%= image_tag 'no_image.jpg', size: '20x40',alt: "no image" %>
        <% end %>
        <section class="item-text-box">
          <p class="item-artist"><%= item.artist.artist_name %></p>
          <p class="item-name"><%= item.item_name %></p>
          <p class="item-category"><%= item.category.category_name %></p>
          <% if current_user.cart_item_exists?(item) %>
          <span class="item-cart">
            <%= link_to 'カートから外す',delete_item_path(item),method: :delete,class:"item-cart" %>
          </span>
        <% else %>
              <%= form_for(@cart_item,url: add_item_path) do |f| %>
              <%= f.hidden_field :item_id, value: item.id %>
              <%= f.hidden_field :quantity, value: 1 %>
              <span class="item-cart"><%= f.submit "カートに入れる", class: "item-cart" %></span>
              <% end %>
        <% end %>
            </section>
          </div>
        </div>
    <% end %>
    <div class="pagination">
      <%= paginate @items %>
    </div>
  </section>

  <div class="sidebar">
    <section class="popular">
      <h2 class="sidebar-headline">検索</h2>
      <div class="sidebar-contents">
      </div>
    </section>
    <section class="instagram">
      <h2 class="instagram-headline">ジャンル</h2>
      <div class="sidebar-contents clearfix">
      </div>
    </section>
    <section class="categories">
      <h2 class="categories-headline">順位</h2>
    </section>
  </div>
</div>
