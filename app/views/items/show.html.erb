			<li>ジャンル：<%#= @item. %></li>
			<liカテゴリ：<%#= @item. %></li>
			<li>発売日：<%= @item.release_date %></li>
			<li>枚数：<%#= @item. %></li>
			<li>合計時間：<%= @item. %></li>
			<li>レーベル：<%= @item.label %></li>
			<li>製造国：<%#= @item. %></li>
		</ul>
	</div>

		<div class="album_disc_info">
			<h3>Disc1</h3>
			<table class="album_table">
				<tr class="album_title">
					<th>No.</th>
					<th>曲名</th>
					<th>収録時間</th>
				</tr>
				<%# @item..each do |song| %>
